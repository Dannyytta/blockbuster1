<div id="<%= dom_id client %>">
  <tr>
    <th scope="row"><%= client.id %></th>
    <td><%= client.name %></td>
    <td><%= client.age %></td>
    <td style="color: blue"><%= client.movie.name %></td>
    <td><%= link_to "Show this client", client, class:"btn btn-dark" %></td>
    <td><%= link_to "Edit this client", edit_client_path(client), class:"btn btn-warning" %></td>
  </tr>
</div>
